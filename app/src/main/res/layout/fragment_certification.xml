<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CertificationFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/InceptionTxtID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Certification"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="#044D85"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"/>
        <TextView
            android:id="@+id/border2"
            android:layout_width="55dp"
            android:layout_height="1dp"
            android:background="#6D9FC3"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_circle_24"
                android:drawablePadding="5dp"
                android:textSize="11sp"
                android:text="CE Certified Product range"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_circle_24"
                android:drawablePadding="5dp"
                android:textSize="11sp"
                android:text="An ISO 9001:2015 Certified company since 2008"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_circle_24"
                android:drawablePadding="5dp"
                android:textSize="11sp"
                android:text="100+ Standard products"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_circle_24"
                android:drawablePadding="5dp"
                android:textSize="11sp"
                android:text="100+ OEM Customised Instruments"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_circle_24"
                android:drawablePadding="5dp"
                android:textSize="11sp"
                android:text="100+ Channel partners across India"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/baseline_circle_24"
                android:drawablePadding="5dp"
                android:textSize="11sp"
                android:text="NABL accredited calibrated Products"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_margin="5dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/certification1"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/certification2"/>

        </LinearLayout>


    </LinearLayout>

</FrameLayout>