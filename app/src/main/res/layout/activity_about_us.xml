<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs">


    <RelativeLayout
        android:id="@+id/rlImgBG"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:background="@drawable/company_img">

    </RelativeLayout>

    <TextView
        android:id="@+id/titleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp"
        android:text="Multispan Control Instruments Pvt Ltd"
        android:textColor="#010D19"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed-light"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/border2"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:background="#03497C"
        android:layout_marginTop="7dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/titleTxt" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/border2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@color/fui_transparent"
        app:tabIndicatorColor="#C1C9CF"
        app:tabInlineLabel="true"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="#F0F7FB"
        app:tabTextAppearance="@style/MyCustomTabLayout"
        app:tabTextColor="@color/black" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rlImgBG" />




</RelativeLayout>