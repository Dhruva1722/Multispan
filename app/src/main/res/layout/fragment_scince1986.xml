<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scince1986Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       android:gravity="center_horizontal">

        <TextView
            android:id="@+id/InceptionTxtID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inception in 1986"
            android:textSize="25sp"
            android:layout_gravity="left"
            android:layout_margin="5dp"
            android:textColor="@color/black"/>


        <TextView
            android:id="@+id/idTVRetrieveData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:layout_margin="5dp"
            android:layout_below="@id/InceptionTxtID"
            android:textColor="@color/black"
            android:textSize="10sp" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/idTVRetrieveData">

            <ImageView
                android:id="@+id/offiveID"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/offive"
                android:layout_margin="7dp"/>

            <ImageView
                android:id="@+id/researchID"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="7dp"
                android:src="@drawable/research"
                android:layout_toRightOf="@id/offiveID"/>

            <ImageView
                android:id="@+id/marketingID"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="7dp"
                android:src="@drawable/marketing"
                android:layout_toRightOf="@id/researchID"/>

            <ImageView
                android:id="@+id/assemblyID"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="7dp"
                android:src="@drawable/assembly"
                android:layout_toRightOf="@id/marketingID"/>


        </RelativeLayout>

    </LinearLayout>



</ScrollView>